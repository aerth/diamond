# diamond-admin
# Makefile generated by Gomaker 65f9949

set -e
NAME=diamond-admin
VERSION=v0.0.5
COMMIT=$(shell git rev-parse --verify --short HEAD)
PREFIX ?= /usr/local/bin
#export CGO_ENABLED=0
RELEASE=${VERSION}${COMMIT}


all:	build


build:
	@echo 'Building ${NAME} version ${RELEASE}'

	go build -o ${NAME} -x --ldflags "-s -X main.diamondversion=${RELEASE} "
	@echo 'Successfully built ${NAME}'



install:
	@echo 'PREFIX=${PREFIX}'

	@mkdir -p ${PREFIX}
	@mv ${NAME} ${PREFIX}/${NAME}
	@echo 'Successfully installed ${NAME} to ${PREFIX}'

run:
	 CGO_ENABLED=1 go run -v -x *.go
